{{ form_start(form) }}
<form action="" method="post" enctype="multipart/form-data" class="uk-form-stacked">
    {# upload Image#}
    <div class="uk-align-left">
    {% if painting.image is empty %}
    {% else %}
        <img class="painting uk-padding-remove"
             data-src="{{ vich_uploader_asset(painting, 'imageFile') | imagine_filter('painting_thumb') }}"
             alt="{{ painting.title }}" title="{{ painting.title }}" uk-img>
    {% endif %}
    </div>

        <div class="uk-margin">
            <div class="js-upload" uk-form-custom>
                {{ form_row(form.imageFile) }}
                <button class="uk-button uk-button-primary" type="button" tabindex="-1">Sélectionner une image</button>
            </div>
        </div>
        <div class="uk-margin">
            <label class="uk-form-label">Titre</label>
            <div class="uk-form-controls">
                {{ form_widget(form.title) }}
            </div>
        </div>
        <div class="uk-margin">
            <label class="uk-form-label">Date de création</label>
            <div class="uk-form-controls">
                {{ form_widget(form.creationDate) }}
            </div>
        </div>
    {{ form_widget(form) }}
    <button class="uk-button uk-button-primary uk-border-rounded">{{ button_label|default('Valider') }}</button>
</form>

{{ form_end(form) }}
