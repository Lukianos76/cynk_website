<!DOCTYPE html>

<title>Painting index</title>

{% block body %}
    <h1>Painting index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreationDate</th>
                <th>Title</th>
                <th>Image</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for painting in paintings %}
            <tr>
                <td>{{ painting.id }}</td>
                <td>{{ painting.creationDate ? painting.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ painting.title }}</td>
                <td>{{ painting.image }}</td>
                <td>{{ painting.updatedAt ? painting.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('painting_show', {'id': painting.id}) }}">show</a>
                    <a href="{{ path('painting_edit', {'id': painting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('painting_new') }}">Create new</a>
{% endblock %}
